<h2>Anmelden</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, input_html:{value: Figaro.env.admin_email}, :autofocus => true %>
  <%= f.input :password, input_html:{value: Figaro.env.admin_password} %>
  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Anmelden", :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
