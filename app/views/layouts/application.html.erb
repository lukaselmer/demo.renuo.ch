<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Demo Renuo Ch" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Demo Renuo Ch" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header>
      <div class="container">
          <div class="row">
            <div class="span6">
              <div class="logo">
                <h1><a href="<%= root_url%>">Renuo <span class="color">CMS Demo</span></a></h1>
                <div class="hmeta"><% t('slogan') %></div>
              </div>
            </div>
            <% if I18n.available_locales.count > 1 %>
            <div class="span6">
              <div class="pull-right">
                <%= render partial: 'layouts/language_switcher' %>
              </div>
            </div>
            <% end %>
          </div>
      </div>
    </header>
    <div class="navbar">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation/navigation' %>
        </div>
      </nav>
    </div>
    <% if subnav_visible?  %>
      <nav class="navbar">
        <div class="container">
          <%= render 'layouts/navigation/navigation_items_flat', item_class: NavigationItem, nav_class: 'nav subnav', items: subnav_items %>
        </div>
      </nav>
    <% end %>
    <div class="content">
    <div class="container">
       <div class="row">
        <div class="span12">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </div>
    </div>
    </div>
    <footer>
        <div class="container">
          <div class="row">
            <div class="widgets">
              <div class="span4">
                <div class="fwidget">
                    <h6>Links</h6>
                    <%= render 'layouts/navigation/navigation_items_flat', item_class: FooterNavigationItem %>
                </div>
              </div>
              <div class="span4">
                <div class="fwidget">
                  <h6>Renuo <span class="color">CMS</span></h6>
                  <div class="copy">
                    <%= render 'content_types/rich_text', record: ContentRichText.predefined(:copyright) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </footer>
  </body>
</html>
